<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_12"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/message_system"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_3"
                android:paddingLeft="@dimen/margin_size_5"
                android:paddingRight="@dimen/margin_size_5"
                android:paddingTop="@dimen/margin_size_3"
                android:text="系统通知"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/message_time"
                android:drawablePadding="@dimen/margin_size_5"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_15" />
        </RelativeLayout>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/margin_size_2"
            android:maxLines="3"
            android:text="在信息技术环境下,教学内容的呈现、教学媒体的选择、教学策略的应用、师生之间的交互模式等，呈现与常规教学不同的气氛。"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/message_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="@dimen/margin_size_10"
            android:background="@null"
            android:drawableLeft="@drawable/discussion_dapinglun"
            android:drawablePadding="@dimen/margin_size_4"
            android:text="回复"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_6"
        android:background="@color/spaceColor" />
</LinearLayout>