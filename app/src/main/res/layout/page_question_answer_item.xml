<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_size_16"
    android:paddingRight="@dimen/margin_size_16"
    android:paddingTop="@dimen/margin_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userIco"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="3"
                android:maxLength="10"
                android:textColor="@color/blow_gray"
                android:textSize="@dimen/font_size_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wenda_question" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wenda_answer" />

                <TextView
                    android:id="@+id/tv_answerContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:textColor="@color/blow_gray"
                    android:textSize="@dimen/font_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_answerDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blow_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_collection"
                    android:layout_width="@dimen/margin_size_16"
                    android:layout_height="@dimen/margin_size_16"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_size_6"
                    android:src="@drawable/workshop_collect_default"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_size_5"
                    android:text="收藏"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_14"
                    android:visibility="gone" />

                <View
                    android:layout_width="@dimen/margin_size_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_size_4"
                    android:layout_marginTop="@dimen/margin_size_4"
                    android:background="@color/spaceColor" />

                <LinearLayout
                    android:id="@+id/li_allAnswers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_allAnswers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="全部答案"
                        android:textColor="@color/defaultColor"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tv_ThumbCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_size_5"
                        android:textColor="@color/defaultColor"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_8"
        android:background="@drawable/edit_border_gray"
        android:hint="我来回答"
        android:padding="@dimen/margin_size_8"
        android:textSize="@dimen/font_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/spaceColor" />
</LinearLayout>
