<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_12"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/teaching_research_end"
            android:gravity="center"
            android:padding="4dp"
            android:text="已结束"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_size_12"
        android:background="@color/spaceColor" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_12"
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_15" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_size_12"
        android:paddingRight="@dimen/margin_size_12">

        <ImageView
            android:id="@+id/ic_user"
            android:layout_width="@dimen/margin_size_26"
            android:layout_height="@dimen/margin_size_26"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:gravity="center"
            android:maxEms="5"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_createTime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_size_12"
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/spaceColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_size_16"
        android:paddingTop="@dimen/margin_size_16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_2"
                android:layout_marginTop="@dimen/margin_size_4"
                android:drawableLeft="@drawable/teaching_research_s_redu"
                android:drawablePadding="@dimen/margin_size_4"
                android:text="热度"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_support"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_2"
                android:layout_marginTop="@dimen/margin_size_2"
                android:drawableLeft="@drawable/teaching_research_s_dianzan"
                android:drawablePadding="@dimen/margin_size_4"
                android:text="点赞"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_advise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_advise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_4"
                android:drawableLeft="@drawable/teaching_research_s_jianyi"
                android:drawablePadding="@dimen/margin_size_4"
                android:text="提建议"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_12"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <com.haoyu.app.view.RoundRectProgressBar
            android:id="@+id/mRrogressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_12"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="2"
            android:progress="1"
            app:progress_background_color="@color/spaceColor"
            app:progress_color="@color/defaultColor" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/margin_size_16"
            android:textColor="@color/gray"
            android:textSize="10sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/spaceColor" />
</LinearLayout>