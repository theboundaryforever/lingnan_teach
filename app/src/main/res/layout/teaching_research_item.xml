<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginRight="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ico"
            android:layout_width="@dimen/margin_size_35"
            android:layout_height="@dimen/margin_size_35"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_createTime"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_15" />

                <TextView
                    android:id="@+id/tv_createTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/gray"
                android:layout_marginBottom="@dimen/margin_size_10"
                android:textSize="@dimen/font_size_15" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fileRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_10" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:background="@color/spaceColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_size_10"
        android:paddingTop="@dimen/margin_size_10">

        <RelativeLayout
            android:id="@+id/rl_support"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/discussion_xiaozan"
                android:drawablePadding="@dimen/margin_size_5"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/margin_size_1"
            android:layout_height="match_parent"
            android:background="@color/spaceColor" />

        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/discussion_xiaopinglun"
                android:drawablePadding="@dimen/margin_size_5"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_12"
        android:background="@color/spaceColor" />
</LinearLayout>