<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spaceColor"
    android:orientation="vertical">

    <com.haoyu.app.view.AppToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_button_text="发送"
        app:show_right_button="true"
        app:title_text="通知公告" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16"
        android:background="@color/white"
        android:drawableRight="@drawable/download_more"
        android:gravity="top|left|center"
        android:hint="公告标题（必填）"
        android:maxLength="100"
        android:maxLines="1"
        android:padding="@dimen/margin_size_12"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_size_16">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16"
        android:background="@color/white"
        android:gravity="top|left|center"
        android:hint="公告内容（必填）"
        android:maxLength="4000"
        android:maxLines="10"
        android:minLines="8"
        android:padding="@dimen/margin_size_10"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>