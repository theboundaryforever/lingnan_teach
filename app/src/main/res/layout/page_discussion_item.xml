<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_12">

        <TextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_8"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_17" />

        <TextView
            android:id="@+id/tv_discussion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/blow_gray"
            android:maxLines="4"
            android:textSize="@dimen/font_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_user"
                android:layout_width="@dimen/margin_size_26"
                android:layout_height="@dimen/margin_size_26"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:gravity="center"
                android:maxEms="5"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_createTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_8"
                android:gravity="left|center"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/bodyLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_size_6"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_size_16"
                    android:layout_height="@dimen/margin_size_16"
                    android:layout_gravity="center"
                    android:src="@drawable/discussion_xiaozan" />

                <TextView
                    android:id="@+id/tv_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_size_4"
                    android:gravity="center"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_size_8"
                android:layout_marginTop="@dimen/margin_size_8"
                android:background="@color/spaceColor" />

            <LinearLayout
                android:id="@+id/bodyComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_6"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_size_16"
                    android:layout_height="@dimen/margin_size_16"
                    android:layout_gravity="center"
                    android:src="@drawable/discussion_xiaopinglun" />

                <TextView
                    android:id="@+id/tv_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_size_4"
                    android:gravity="center"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_4"
        android:background="@color/spaceColor" />
</LinearLayout>