<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.haoyu.app.view.AppToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_button_image="@drawable/app_back"
        app:show_right_button="false"
        app:title_text="请了解《创课发起规则》" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_size_12"
                android:paddingRight="@dimen/font_size_12">

                <RadioButton
                    android:id="@+id/rb_idea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teaching_rule_selector"
                    android:button="@null"
                    android:checked="true"
                    android:paddingBottom="@dimen/margin_size_5"
                    android:paddingLeft="@dimen/margin_size_6"
                    android:paddingRight="@dimen/margin_size_6"
                    android:paddingTop="@dimen/margin_size_5"
                    android:text="说出你的想法"
                    android:textColor="@color/teaching_rule_color"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/defaultColor" />

                <RadioButton
                    android:id="@+id/rb_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teaching_rule_selector"
                    android:button="@null"
                    android:checked="false"
                    android:paddingBottom="@dimen/margin_size_5"
                    android:paddingLeft="@dimen/margin_size_6"
                    android:paddingRight="@dimen/margin_size_6"
                    android:paddingTop="@dimen/margin_size_5"
                    android:text="获得点赞支持"
                    android:textColor="@color/teaching_rule_color"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/defaultColor" />

                <RadioButton
                    android:id="@+id/rb_advise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teaching_rule_selector"
                    android:button="@null"
                    android:paddingBottom="@dimen/margin_size_5"
                    android:paddingLeft="@dimen/margin_size_6"
                    android:paddingRight="@dimen/margin_size_6"
                    android:paddingTop="@dimen/margin_size_5"
                    android:text="收集创课建议"
                    android:textColor="@color/teaching_rule_color"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@color/defaultColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_20"
                android:layout_marginTop="@dimen/margin_size_16"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_size_12"
                android:paddingRight="@dimen/font_size_12">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="@color/defaultColor" />

                    <RadioButton
                        android:id="@+id/rb_build"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/teaching_rule_selector"
                        android:button="@null"
                        android:paddingBottom="@dimen/margin_size_5"
                        android:paddingLeft="@dimen/margin_size_6"
                        android:paddingRight="@dimen/margin_size_6"
                        android:paddingTop="@dimen/margin_size_5"
                        android:text="完成课程构建"
                        android:textColor="@color/teaching_rule_color"
                        android:textSize="@dimen/font_size_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/defaultColor" />

                    <RadioButton
                        android:id="@+id/rb_viewing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/teaching_rule_selector"
                        android:button="@null"
                        android:paddingBottom="@dimen/margin_size_5"
                        android:paddingLeft="@dimen/margin_size_6"
                        android:paddingRight="@dimen/margin_size_6"
                        android:paddingTop="@dimen/margin_size_5"
                        android:text="晋选观摩课"
                        android:textColor="@color/teaching_rule_color"
                        android:textSize="@dimen/font_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_16"
                android:background="@color/spaceColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/teaching_explain"
                    android:drawablePadding="@dimen/margin_size_6"
                    android:padding="@dimen/margin_size_12"
                    android:text="创课说明"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_1"
                    android:background="@color/spaceColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_size_4"
                    android:padding="@dimen/margin_size_12"
                    android:text="@string/gen_class_explain"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_6"
                    android:background="@color/spaceColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_idea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_size_6"
                    android:padding="@dimen/margin_size_12"
                    android:text="【说出你的想法】"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_1"
                    android:background="@color/spaceColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_size_4"
                    android:padding="@dimen/margin_size_12"
                    android:text="@string/gen_class_idea"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_6"
                    android:background="@color/spaceColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_size_6"
                    android:padding="@dimen/margin_size_12"
                    android:text="【获得点赞支持】"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_1"
                    android:background="@color/spaceColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_size_4"
                    android:padding="@dimen/margin_size_12"
                    android:text="@string/gen_class_support"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_6"
                    android:background="@color/spaceColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_advise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_size_6"
                    android:padding="@dimen/margin_size_12"
                    android:text="【收集创课建议】"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_1"
                    android:background="@color/spaceColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_size_4"
                    android:padding="@dimen/margin_size_12"
                    android:text="@string/gen_class_advise"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_6"
                    android:background="@color/spaceColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_build"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_size_6"
                    android:padding="@dimen/margin_size_12"
                    android:text="【完成课程构建】"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_1"
                    android:background="@color/spaceColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_size_4"
                    android:padding="@dimen/margin_size_12"
                    android:text="@string/gen_class_build"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_6"
                    android:background="@color/spaceColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_viewing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_size_6"
                    android:padding="@dimen/margin_size_12"
                    android:text="【晋选观摩课】"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_1"
                    android:background="@color/spaceColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_size_4"
                    android:padding="@dimen/margin_size_12"
                    android:text="@string/gen_class_viewing"
                    android:textSize="@dimen/font_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_6"
                    android:background="@color/spaceColor" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>