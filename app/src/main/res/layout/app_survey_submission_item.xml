<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size_12">

        <ImageView
            android:id="@+id/ic_user"
            android:layout_width="@dimen/margin_size_26"
            android:layout_height="@dimen/margin_size_26"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_size_12"
        android:paddingRight="@dimen/margin_size_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_2"
            android:background="@drawable/shape_button_publish"
            android:paddingBottom="@dimen/margin_size_1"
            android:paddingLeft="@dimen/margin_size_2"
            android:paddingRight="@dimen/margin_size_2"
            android:paddingTop="@dimen/margin_size_1"
            android:text="回答"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/tv_content"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_size_4"
            android:textSize="@dimen/font_size_16" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_marginTop="@dimen/margin_size_16"
        android:background="@color/spaceColor" />
</LinearLayout>