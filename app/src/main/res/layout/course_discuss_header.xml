<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_12">

        <TextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_17" />

        <TextView
            android:id="@+id/tv_discussion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_size_1"
            android:textSize="@dimen/font_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16">

            <ImageView
                android:id="@+id/ic_user"
                android:layout_width="@dimen/margin_size_25"
                android:layout_height="@dimen/margin_size_25"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_8"
                android:gravity="center"
                android:maxLength="10"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_createTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_8"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commentCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spaceColor"
        android:drawableLeft="@drawable/discussion_pinglun"
        android:drawablePadding="@dimen/margin_size_5"
        android:padding="@dimen/margin_size_10"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>