<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:clickable="true"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/margin_size_40"
        android:layout_height="@dimen/margin_size_40"
        android:layout_centerVertical="true" />

    <CheckBox
        android:id="@+id/cb_choose"
        android:layout_width="@dimen/margin_size_20"
        android:layout_height="@dimen/margin_size_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/download_checkbox_selector"
        android:button="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_size_10"
        android:layout_toLeftOf="@id/cb_choose"
        android:layout_toRightOf="@id/iv_type"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_12">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blow_gray"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_4"
            android:textColor="@color/blow_gray"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_below="@id/layout_info"
        android:layout_marginTop="6dp"
        android:background="@color/spaceColor" />

</RelativeLayout>