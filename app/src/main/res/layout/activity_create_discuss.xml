<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spaceColor"
    android:orientation="vertical">

    <com.haoyu.app.view.AppToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_button_text="发起"
        app:show_right_button="true"
        app:title_text="发起讨论" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16"
            android:background="@color/white"
            android:drawablePadding="@dimen/margin_size_6"
            android:drawableRight="@drawable/download_more"
            android:gravity="left|center"
            android:hint="输入标题36字以内"
            android:maxLength="36"
            android:maxLines="1"
            android:padding="@dimen/margin_size_12"
            android:textColorHint="@color/blow_gray"
            android:textSize="@dimen/font_size_16">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16"
            android:background="@color/white"
            android:gravity="left"
            android:hint="内容描述"
            android:maxLength="1000"
            android:maxLines="8"
            android:minLines="7"
            android:padding="@dimen/margin_size_12"
            android:textColorHint="@color/blow_gray"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

</LinearLayout>