<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spaceColor"
    android:orientation="vertical">

    <com.haoyu.app.view.AppToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_button_image="@drawable/discussion_delete"
        app:show_right_button="false"
        app:title_text="自由交流" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_16"
        android:background="@color/white"
        android:gravity="left"
        android:hint="输入内容描述"
        android:maxLength="1000"
        android:maxLines="8"
        android:minLines="8"
        android:padding="@dimen/margin_size_16"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/font_size_18">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_size_16"
        android:background="@drawable/app_toolbar_selector"
        android:paddingBottom="@dimen/margin_size_10"
        android:paddingLeft="@dimen/margin_size_26"
        android:paddingRight="@dimen/margin_size_26"
        android:paddingTop="@dimen/margin_size_10"
        android:text="发起"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>
