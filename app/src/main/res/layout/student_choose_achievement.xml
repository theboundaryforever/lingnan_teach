<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/choose_achievement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_10"
        android:text="走向移动学习"
        android:layout_marginRight="@dimen/margin_size_10"
        android:layout_toLeftOf="@+id/choose_achievement_score"
        android:textSize="@dimen/font_size_15" />

    <TextView
        android:id="@+id/choose_achievement_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/fenshu"
        android:drawablePadding="@dimen/margin_size_5"
        android:padding="@dimen/margin_size_10"
        android:text="80"
        android:textSize="@dimen/font_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_12"
        android:layout_below="@+id/choose_achievement_score"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:background="@color/spaceColor" />
</RelativeLayout>
