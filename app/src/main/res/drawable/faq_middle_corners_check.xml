<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="@dimen/_margin_size_2"
                android:right="@dimen/_margin_size_2" />
            <stroke
                android:width="@dimen/margin_size_1"
                android:color="@color/defaultColor" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/defaultColor" />
            <stroke
                android:width="@dimen/margin_size_1"
                android:color="@color/defaultColor" />
        </shape>
    </item>

</layer-list>